<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <%= link_to "[로그아웃]", destroy_user_session_path, method: :delete ,class: 'btn btn-danger' ,data: {confirm: "로그아웃 하시겠습니까?"}%>
  <% else %>
    <%= link_to "[로그인]", new_user_session_path, class: 'btn btn-success' %>
  <% end %>
  
  <%= link_to "[홈으로]", root_path, class: 'btn btn-info' %>
  <%= link_to 'New Post', new_post_path, class:'btn btn-warning' %>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
